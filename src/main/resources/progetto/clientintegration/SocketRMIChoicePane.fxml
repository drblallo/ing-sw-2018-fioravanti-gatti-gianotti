<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progetto.clientintegration.SocketRMIChoicePaneController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Insert the IP address:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="20.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="iPAddress" prefHeight="25.0" prefWidth="248.0" promptText="IP address.." />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox layoutX="20.0" layoutY="60.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="errorLabel" textFill="#f20606">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox layoutX="20.0" layoutY="60.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Select the favourite type of connection: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="40.0" />
                     </HBox.margin>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="115.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox spacing="10.0">
                     <children>
                        <CheckBox fx:id="socket" mnemonicParsing="false" onAction="#onCheckBoxSelected" selected="true" text="Socket">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </CheckBox>
                        <CheckBox fx:id="rmi" mnemonicParsing="false" onAction="#onCheckBoxSelected" text="RMI" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="connectButton" mnemonicParsing="false" text="Connect">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
